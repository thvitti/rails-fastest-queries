<p id="notice"><%= notice %></p>
<h1>People</h1>

<hr />

<h4>Busque por uma faixa de idade!</h4>

<%= form_for(root_path, method: "get") do |f| %>
 De: <%= number_field_tag :from %>
 Até: <%= number_field_tag :to %>
 Tipo: <%= text_field_tag :tipo %>
  <%= f.submit 'Procurar' %>
<% end %>

<hr />

<table>
 <thead>
   <tr>
     <th>Name</th>
     <th>Age</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @people.each do |person| %>
     <tr>
       <td><%= person.name %></td>
       <td><%= person.age %></td>
       <td><%= link_to 'Show', person %></td>
       <td><%= link_to 'Edit', edit_person_path(person) %></td>
       <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
   <% end %>
 </tbody>
</table>
<br>


<%= link_to 'New Person', new_person_path %>
